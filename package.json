{
  "name": "openeuler-vscode",
  "displayName": "openeuler-vscode",
  "version": "0.0.2",
  "description": "openeuler vscode extension",
  "repository": {
    "url": "https://gitee.com/kunpeng_compute/openeuler-vscode"
  },
  "keywords": [],
  "author": "Huawei Technologies Co., Ltd.",
  "license": "MulanPSL-2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "openeuler_vscode_plugin",
      "properties": {
        "openeuler_vscode_plugin.personal_access_token": {
          "type": "string",
          "description": "gitee私人令牌，需要配置项目/PR/组织权限",
          "default": ""
        },
        "openeuler_vscode_plugin.target_folder": {
          "type": "string",
          "description": "下载仓库的目标路径，默认为家目录的openeuler_repos文件夹",
          "default": ""
        }
      }
    },
    "commands": [
      {
        "command": "openeuler_vscode_plugin.pageShow",
        "title": "打开插件Webview页面"
      },
      {
        "command": "openeuler_vscode_plugin.showClonePage",
        "title": "打开克隆项目页",
        "icon": "$(clone)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "group": "navigation",
          "command": "openeuler_vscode_plugin.pageShow"
        }
      ],
      "view/item/context": [
        {
          "command": "openeuler_vscode_plugin.showClonePage",
          "when": "view == openeuler_plugin_expolerTreeView && viewItem == myRepoNode",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "openeuler_vscode_plugin.pageShow",
        "key": "cmd+g cmd+t",
        "mac": "cmd+g cmd+t",
        "win": "ctrl+g ctrl+t",
        "when": "editorTextFocus"
      }
    ],
    "icon": "resource/extension-icon.svg",
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openEuler",
          "title": "OpenEuler",
          "icon": "resource/extension-icon.svg"
        }
      ]
    },
    "views": {
      "openEuler": [
        {
          "id": "openeuler_plugin_expolerTreeView",
          "name": "OpenEuler Vscode Plugin"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "pnpm install && cd webview-ui && pnpm install",
    "dev": "concurrently \"pnpm run dev:webview\" \"pnpm run watch\"",
    "build": "pnpm run build:webview ",
    "dev:web": "cd webview-ui && pnpm run dev",
    "dev:webview": "cd webview-ui && pnpm run build:watch",
    "build:webview": "cd webview-ui && pnpm run build",
    "pack:vsix": "pnpm build && vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run build-rollup",
    "compile": "tsc -p ./",
    "watch": "pnpm run clear:out && tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "clear": "rimraf ./out && rimraf ./node_modules",
    "clear:out": "rimraf ./out/extension",
    "build-rollup": "pnpm run clear:out && rollup -c"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.7.9",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.29.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cec-client-server": "^1.3.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0"
  }
}
